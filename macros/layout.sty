\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{layout}[2026/01/01 Layout primitives]

\RequirePackage{xparse}
\RequirePackage{core}
\RequirePackage{xstring}

% Row: left content + right content on the same line
\NewDocumentCommand{\Row}{m m}{
  \ResumeRequireNonEmpty{Row:left}{#1}
  \ResumeRequireNonEmpty{Row:right}{#2}
  #1 \hfill #2\par
}

% Optional subline (italic), used under a row
\NewDocumentCommand{\Subline}{m}{
  \ResumeRequireNonEmpty{Subline}{#1}
  \textit{#1}
}

% Spacing: formats spacing between elements
\NewDocumentCommand{\SpaceHalf}{}{\vspace{0.5em}}
\NewDocumentCommand{\Space}{}{\vspace{1em}}
\NewDocumentCommand{\Indent}{}{\hspace*{1em}}

% Name: formats resume name
\NewDocumentCommand{\Name}{}{
  {\Huge\textbf{\resumename}}
  \par
}

% Job title: formats resume job title
\NewDocumentCommand{\JobTitle}{}{
  {\Large\resumetitle}
  \par
}

% Email: formats email with mailto link
\NewDocumentCommand{\Email}{}{
  \href{mailto:\resumeemail}{\resumeemail}
}

% Website: formats website with href link
\NewDocumentCommand{\Website}{}{
  \href{\resumewebsite}{\resumewebsite}
}

% Location: formats location
\NewDocumentCommand{\Location}{}{
  \resumelocation
}

% Phone: formats phone with tel link
% private.tex should contain phone in format: +18005551234
% Display format: 1 (800) 555-1234
\NewDocumentCommand{\Phone}{}{
  \StrMid{\resumephone}{3}{5}[\phonearea]%
  \StrMid{\resumephone}{6}{8}[\phoneexchange]%
  \StrMid{\resumephone}{9}{12}[\phonenumber]%
  \href{tel:\resumephone}{1~(\phonearea)~\phoneexchange-\phonenumber}%
}

% Contact: formats contact information
\NewDocumentCommand{\Contact}{}{
  \Email\Sep
  \Website\Sep
  % \Location\Sep
  \Phone\par
}

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{entries}[2026/01/01 Semantic resume entries]

\RequirePackage{xparse}
\RequirePackage{core}
\RequirePackage{layout}

% Entry: headline row + optional subline + body block
% Args:
% 1 left headline (bolded by caller or here)
% 2 right headline (dates)
% 3 optional subline
% 4 body content (usually BulletList)
\NewDocumentCommand{\Entry}{m m o m}{
  \ResumeRequireNonEmpty{Entry:left}{#1}
  \ResumeRequireNonEmpty{Entry:right}{#2}
  \ResumeWarnIfSuspiciousDate{Entry:right}{#2}
  \ResumeRequireNonEmpty{Entry:subline}{#3}
  \Row{\textbf{#1}}{#2}
  \IfValueT{#3}{#3\par}
  #4\par
}

\NewDocumentCommand{\Project}{m m}{
  \ResumeRequireNonEmpty{Project:title}{#1}
  \ResumeRequireNonEmpty{Project:description}{#2}
  \textbf{#1}\par
  #2\par
}


\NewDocumentCommand{\Skill}{m m}{
  \ResumeRequireNonEmpty{Skill:title}{#1}
  \ResumeRequireNonEmpty{Skill:description}{#2}
  \textbf{#1} -- {#2}\par
  \SpaceHalf
}